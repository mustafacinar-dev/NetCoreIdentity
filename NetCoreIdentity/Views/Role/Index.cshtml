@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="modal-header">Yetki İşlemleri</h3>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <a asp-action="AddRole" asp-controller="Role" class="btn btn-info btn-sm p-3">Yetki Ekle</a>
            @if (Model.Count > 0)
            {
                <table class="table table-sm table-hover p-2">
                    <tr>
                        <td>Yetki Adı</td>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Name</td>
                        </tr>
                    }
                </table>
            }else
            {
                <p class="text-danger p-1">Sisteminizde kayıtlı yetki bulunmaktadır.</p>
            }

        </div>
    </div>
</div>

