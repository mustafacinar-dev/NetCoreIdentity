@model UpdateRoleViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="modal-header">Bilgilerimi Güncelle</h3>

<div class="container-fluid">
    <div class="row">
        <form asp-action="UpdateRole" asp-controller="Role" method="post" enctype="multipart/form-data" class="w-75 mx-auto p-3 bg-light">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
                <input asp-for="Name" class="form-control" />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <button class="btn btn-info">Kaydet</button>
        </form>
    </div>
</div>