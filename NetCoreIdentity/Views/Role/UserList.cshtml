@model List<AppUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="modal-header">Kullanıcılar</h3>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            @if (Model.Count > 0)
            {
                <table class="table table-sm table-hover p-2">
                    <tr>
                        <td>Kullanıcı Adı</td>
                        <td>Adı</td>
                        <td>Soyadı</td>
                        <td>Yetkiler</td>
                        <td>İşlem</td>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserName</td>
                            <td>@item.Name</td>
                            <td>@item.SurName</td>
                            <td>
                                <ShowRoles user-id="@item.Id"></ShowRoles>   
                            </td>
                            <td>
                                <a asp-action="AssignRole" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Rol Ata</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p class="text-danger p-1">Sisteminizde kayıtlı kullanıcı bulunmamaktadır.</p>
            }
        </div>
    </div>
</div>

